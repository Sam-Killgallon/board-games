<div class="banner banner-small banner-dark flex">
  <div class="m-auto">
    <div class="banner-title">Games</div>
  <div class="btn btn--ghost"><%= link_to 'Add New Game', new_admin_game_path %></div>
  </div>
</div>

<div class="p">
  <div class=" grid grid--4">
    <% @showcase_games.each do |game| %>
      <div class="card">
        <div class="media">
          <div class="media__figure">
            <%= image_tag game.box_image.variant(resize: '100x100') %>
          </div>
          <div class="media__body">
            <h5 class="mt-0"><%= game.title %></h5>
            <%= game.min_players %>-<%= game.max_players %> Players
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Players</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @games.each do |game| %>
        <tr>
          <td><%= link_to game.title, [:admin, game] %></td>
          <td><%= game.min_players %>-<%= game.max_players %></td>
          <td><%= link_to 'Edit', [:edit, :admin, game] %></td>
          <td><%= link_to 'Destroy', [:admin, game], method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
