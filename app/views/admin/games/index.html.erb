<h1>Games</h1>

<%= link_to 'Add new game', new_admin_game_path %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Players</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= link_to game.title, [:admin, game] %></td>
        <td><%= game.min_players %>-<%= game.max_players %></td>
        <td><%= link_to 'Edit', [:edit, :admin, game] %></td>
        <td><%= link_to 'Destroy', [:admin, game], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
