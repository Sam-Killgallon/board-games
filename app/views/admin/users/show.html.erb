<h1><%= @user.email %> - <%= @user.id %></h1>

<h3>Games</h3>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Players</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user.games.each do |game| %>
      <tr>
        <td><%= link_to game.title, [:admin, game] %></td>
        <td><%= game.min_players %>-<%= game.max_players %></td>
        <td><%= link_to 'Edit', [:edit, :admin, game] %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Back', admin_users_path %>
